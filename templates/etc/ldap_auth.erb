<%
  bool_xlat = {
    true => 'yes',
    false => 'no'
  }
-%>
<?xml version="1.0" ?>
<autofs_ldap_sasl_conf
  usetls="<%= bool_xlat[@usetls] %>"
  tlsrequired="<%= bool_xlat[@tlsrequired] %>"
<% if @authrequired.is_a?(String) -%>
  authrequired="<%= @authrequired %>"
<% else -%>
  authrequired="<%= bool_xlat[@authrequired] %>"
<% end -%>
  authtype="<%= @authtype%>"
<% if @authtype.eql?('EXTERNAL') -%>
  external_cert="<%= @external_cert %>"
  external_key="<%= @external_key %>"
<% end -%>
<% if @user -%>
  user="<%= @user %>"
<% end -%>
<% if @secret -%>
  secret="<%= @secret %>"
<% end -%>
<% if @clientprinc -%>
  clientprinc="<%= @clientprinc %>"
<% end -%>
<% if @credentialcache -%>
  credentialcache="<%= @credentialcache %>"
<% end -%>
/>
