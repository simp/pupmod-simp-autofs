<%
  bool_xlat = {
    true  => 'yes',
    false => 'no'
  }
-%>
MASTER_MAP_NAME="<%= @master_map_name %>"
TIMEOUT=<%= @mount_timeout %>
NEGATIVE_TIMEOUT=<%= @negative_timeout %>
<% if @mount_wait -%>
MOUNT_WAIT=<%= @mount_wait %>
<% end -%>
<% if @umount_wait -%>
UMOUNT_WAIT=<%= @umount_wait %>
<% end -%>
BROWSE_MODE="<%= bool_xlat[@browse_mode] %>"
APPEND_OPTIONS=<%= bool_xlat[@append_options] %>
LOGGING="<%= @logging %>"
<% if @ldap_uri -%>
LDAP_URI="<%= @ldap_uri %>"
<%   if @ldap_timeout -%>
LDAP_TIMEOUT=<%= @ldap_timeout %>
<%   end -%>
<%   if @ldap_network_timeout -%>
LDAP_NETWORK_TIMEOUT=<%= @ldap_network_timeout %>
<%   end -%>
<%   if @search_base -%>
SEARCH_BASE="<%= @search_base %>"
<%   end -%>
<%   if @map_object_class -%>
MAP_OBJECT_CLASS="<%= @map_object_class %>"
<%   end -%>
<%   if @entry_object_class -%>
ENTRY_OBJECT_CLASS="<%= @entry_object_class %>"
<%   end -%>
<%   if @map_attribute -%>
MAP_ATTRIBUTE="<%= @map_attribute %>"
<%   end -%>
<%   if @entry_attribute -%>
ENTRY_ATTRIBUTE="<%= @entry_attribute %>"
<%   end -%>
<%   if @value_attribute -%>
VALUE_ATTRIBUTE="<%= @value_attribute %>"
<%   end -%>
<%   if @auth_conf_file -%>
AUTH_CONF_FILE="<%= @auto_conf_file %>"
<%   end -%>
<% end -%>
<% if @map_hash_table_size -%>
MAP_HASH_TABLE_SIZE=<%= @map_hash_table_size %>
<% end -%>
USE_MISC_DEVICE="<%= bool_xlat[@use_misc_device] %>"
<% if @options -%>
  OPTIONS="<%= @options %>"
<% end -%>
